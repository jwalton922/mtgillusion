extends layout

block head
    title= name
    meta(name="description", content="#{name} A free deck building site for Magic: The Gathering with easy to use tools including our powerful card suggestion engine.")
    meta(name="keywords", content="#{name} #{cardInfo.rules} magic the gathering combos card suggestion engine MTG deck building proxy proxies print printing build node graph")
block content
    h1= name
    div.row
        div.span4
            img(src=imageName, alt=name)

        div.pull-right
            script(type="text/javascript")
                <!--
                google_ad_client = "ca-pub-8959125242059762";
                /* cardPageSideAd */
                google_ad_slot = "7998666424";
                google_ad_width = 300;
                google_ad_height = 600;
                //-->

            script(type="text/javascript", src="http://pagead2.googlesyndication.com/pagead/show_ads.js")

    table.table
        tbody
            tr
                td rules
                td #{cardInfo.rules}
            tr
                td artist
                td #{cardInfo.artist}
            tr
                td rulings
                td #{cardInfo.rulings}
            tr
                td type
                td #{cardInfo.type}
            tr
                td flavor
                td #{cardInfo.flavor}
            tr
                td rarity
                td #{cardInfo.rarity}

    label Card Text Label

    label Relationships
    each node in nodes
        p 
            a(href='/card/'+node['x.name'])
                =node["x.name"]

            span(style='margin-left:10px') Score: #{node["r.count"]}

    div#disqus_thread
    div
        script(type="text/javascript")
            /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
            var disqus_shortname = 'mtgillusion'; // required: replace example with your forum shortname
            var disqus_identifier = "#{name}";
            /* * * DON'T EDIT BELOW THIS LINE * * */
            (function() {
                var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
                dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
                (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
            })();

        // noscript Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
        a.dsq-brlink(href="http://disqus.com") comments powered by
            span.logo-disqus
                Disqus
    
